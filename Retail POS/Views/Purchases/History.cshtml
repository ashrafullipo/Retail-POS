@model IEnumerable<Retail_POS.Models.Purchase>

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📜 Purchase History</h4>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold">
                ➕ New Purchase
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0 align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Purchase Date</th>
                        <th>Supplier</th>
                        <th>Total Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PurchaseDate.ToString("dd-MM-yyyy")</td>
                                <td>@item.Supplier?.SupplierName</td>
                                <td class="fw-bold text-success">৳ @item.TotalAmount</td>
                                <td>@item.Notes</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-muted py-4">
                                No purchase records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
