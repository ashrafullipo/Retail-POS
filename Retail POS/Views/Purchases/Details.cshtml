@model Retail_POS.Models.Purchase

@{
    ViewData["Title"] = "Purchase Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Purchase Details</h4>
            <a asp-action="Index" class="btn btn-light btn-sm fw-bold">← Back to List</a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier?.SupplierName</dd>

                <dt class="col-sm-3 fw-bold">Purchase Date</dt>
                <dd class="col-sm-9">@Model.PurchaseDate.ToString("dd-MM-yyyy")</dd>

                <dt class="col-sm-3 fw-bold">Total Amount</dt>
                <dd class="col-sm-9 text-success fw-bold">৳ @Model.TotalAmount</dd>

                <dt class="col-sm-3 fw-bold">Notes</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.PurchaseId" class="btn btn-warning me-2 px-4">✏️ Edit</a>
                <a asp-action="Delete" asp-route-id="@Model?.PurchaseId" class="btn btn-danger me-2 px-4">Delete</a>
                <a asp-action="Index" class="btn btn-secondary px-4">← Back</a>
            </div>
        </div>
    </div>
</div>
