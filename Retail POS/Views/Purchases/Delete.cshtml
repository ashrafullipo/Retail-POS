@model Retail_POS.Models.Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Delete Purchase</h4>
            <a asp-action="Index" class="btn btn-light btn-sm fw-bold">← Back to List</a>
        </div>

        <div class="card-body">
            <div class="alert alert-warning fw-bold">
                Are you sure you want to delete this purchase? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier?.SupplierName</dd>

                <dt class="col-sm-3 fw-bold">Purchase Date</dt>
                <dd class="col-sm-9">@Model.PurchaseDate.ToString("dd-MM-yyyy")</dd>

                <dt class="col-sm-3 fw-bold">Total Amount</dt>
                <dd class="col-sm-9 text-success fw-bold">৳ @Model.TotalAmount</dd>

                <dt class="col-sm-3 fw-bold">Notes</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex justify-content-end mt-4">
                <input type="hidden" asp-for="PurchaseId" />
                <button type="submit" class="btn btn-danger me-2 px-4">
                    Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
