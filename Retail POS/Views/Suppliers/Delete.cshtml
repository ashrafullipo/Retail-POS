@model Retail_POS.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold text-danger">Delete Supplier</h1>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- Delete Warning Card -->
    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-4">
            <h4 class="text-dark mb-3">Are you sure you want to delete this supplier?</h4>
            <hr />

            <!-- Supplier Details -->
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.SupplierName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SupplierName)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            </dl>

            <!-- Action Buttons -->
            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="SupplierId" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa fa-trash me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
