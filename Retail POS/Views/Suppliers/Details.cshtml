@model Retail_POS.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold text-primary">Supplier Details</h1>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- Details Card -->
    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-4">
            <h4 class="card-title text-dark mb-3">Supplier Information</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.SupplierName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SupplierName)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            </dl>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.SupplierId" class="btn btn-primary px-4">
                    <i class="fa fa-edit me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
