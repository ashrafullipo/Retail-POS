@model Retail_POS.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold text-primary">📄 Product Details</h1>
        <div>
            <a class="btn btn-success me-2" asp-action="Edit" asp-route-id="@Model?.ProductId">
                <i class="fa fa-edit me-1"></i> Edit
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fa fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Product Details Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3 text-primary">@Model?.Name</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">SKU</dt>
                <dd class="col-sm-9">@Model?.SKU</dd>

                <dt class="col-sm-3 text-muted">Price</dt>
                <dd class="col-sm-9">$@Model?.Price</dd>

                <dt class="col-sm-3 text-muted">Quantity</dt>
                <dd class="col-sm-9">
                    @Model?.Quantity
                    @if (Model.Quantity == 0)
                    {
                        <span class="badge bg-danger ms-2">Out of Stock</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">@Model?.Category</dd>
            </dl>
        </div>
    </div>
</div>

<!-- Optional: add small CSS for card styling -->
<style>
    .card-title {
        font-size: 1.25rem;
    }

    .badge {
        font-size: 0.85rem;
    }
</style>
