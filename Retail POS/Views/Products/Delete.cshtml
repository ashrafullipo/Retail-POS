@model Retail_POS.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold text-danger">🗑️ Delete Product</h1>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this product?</h5>
            <dl class="row mb-3">
                <dt class="col-sm-3 text-muted">Name</dt>
                <dd class="col-sm-9">@Model?.Name</dd>

                <dt class="col-sm-3 text-muted">SKU</dt>
                <dd class="col-sm-9">@Model?.SKU</dd>

                <dt class="col-sm-3 text-muted">Price</dt>
                <dd class="col-sm-9">$@Model?.Price</dd>

                <dt class="col-sm-3 text-muted">Quantity</dt>
                <dd class="col-sm-9">@Model?.Quantity</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">@Model?.Category</dd>
            </dl>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger shadow-sm">
                    <i class="fa fa-trash me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">
                    <i class="fa fa-arrow-left me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card-title {
        font-size: 1.25rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }
</style>
