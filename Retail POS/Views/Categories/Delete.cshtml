@model Retail_POS.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">Delete Category</h3>
                </div>
                <div class="card-body">
                    <p class="fw-semibold mb-4 text-center">Are you sure you want to delete this category?</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Category Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="CategoryId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
