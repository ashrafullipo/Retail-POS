@model Retail_POS.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Category Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Category Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
                    </dl>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
