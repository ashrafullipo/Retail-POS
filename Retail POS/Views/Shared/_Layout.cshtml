@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retail_POS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Retail_POS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
    <div class="d-flex">

        <!-- 🧭 Sidebar -->
        <div class="bg-white text-dark sidebar p-3" style="width:240px; min-height:100vh;">
            <h3 class="text-center border-bottom pb-2 mb-3">Retail POS</h3>
            <ul class="nav flex-column">

                <!-- Dashboard -->
                <li class="nav-item shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#dashboardMenu" role="button">
                        🏠 Dashboard <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="dashboardMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Dashboard" asp-action="Index">Overview</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Dashboard" asp-action="Analytics">Analytics</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Dashboard" asp-action="Notifications">Notifications</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Products -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#productsMenu">
                        📦 Products <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="productsMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Products" asp-action="Index">All Products</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Products" asp-action="Create">Add Product</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Stock" asp-action="Index">Stock Management</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Purchase -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#purchaseMenu">
                        🧾 Purchase <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="purchaseMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Purchases" asp-action="Index">New Purchase</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Purchases" asp-action="History">Purchase History</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Customers -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#customersMenu">
                        👤 Customers <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="customersMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Customers" asp-action="Index">All Customers</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Customers" asp-action="Create">Add Customer</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Supplier -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#supplierMenu">
                        🚚 Supplier <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="supplierMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item"><a class="nav-link text-dark-50" asp-controller="Suppliers" asp-action="Index">All Suppliers</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Suppliers" asp-action="Create">Add Supplier</a></li>
                            <li class="nav-item"><a class="nav-link text-dark-50" asp-controller="Supplier" asp-action="Reports">Supplier Reports</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Sales -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#salesMenu">
                        💰 Sales <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="salesMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Sales" asp-action="Index">All Sales</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Sales" asp-action="Create">New Sale</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Invoice" asp-action="Index">Invoices</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Payment" asp-action="Index">Payments</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Reports -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#reportsMenu">
                        📊 Reports <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="reportsMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Reports" asp-action="SalesReport">Sales Report</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Reports" asp-action="StockReport">Stock Report</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Reports" asp-action="CustomerReport">Customer Report</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Settings -->
                <li class="nav-item mt-2 shadow-sm">
                    <a class="nav-link text-dark" data-bs-toggle="collapse" href="#settingsMenu">
                        ⚙ Settings <i class="fa fa-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="settingsMenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Settings" asp-action="Index">General Settings</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Settings" asp-action="Users">User Management</a></li>
                            <li class="nav-item "><a class="nav-link text-dark-50" asp-controller="Settings" asp-action="Roles">Role Management</a></li>
                        </ul>
                    </div>
                </li>

            </ul>
        </div>

        <!-- 🧭 Main Content -->
        <div class="flex-grow-1 d-flex flex-column">

            <!-- ✅ Navbar -->
            <nav class="navbar navbar-expand-lg bg-light shadow-sm">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse justify-content-end">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

            <!-- ✅ Page Content -->
            <main role="main" class="p-4 flex-grow-1 bg-white">
                @RenderBody()
            </main>

            <!-- ✅ Footer -->
            <footer class="bg-light text-center py-3 border-top">
                &copy; 2025 - Retail_POS | Developed by <b>Lipo</b>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
