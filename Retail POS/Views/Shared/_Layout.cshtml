<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retail_POS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Retail_POS.styles.css" asp-append-version="true" />
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .sidebar {
            width: 240px;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
                padding: 10px 15px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .sidebar .nav-link:hover {
                    background: rgba(255, 255, 255, 0.1);
                }

        .submenu .nav-link {
            font-size: 14px;
            padding-left: 35px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark sidebar">
            <h3 class="text-center text-white py-3 border-bottom">Retail POS</h3>
            <ul class="nav flex-column">

                <!-- Dashboard -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#dashboardMenu" role="button" aria-expanded="false">
                        <span>🏠 Dashboard</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="dashboardMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Home" asp-action="Index">Overview</a></li>
                            <li><a class="nav-link" asp-controller="Dashboard" asp-action="Analytics">Analytics</a></li>
                            <li><a class="nav-link" asp-controller="Dashboard" asp-action="Notifications">Notifications</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Products -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#productsMenu" role="button" aria-expanded="false">
                        <span>📦 Products</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="productsMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Products" asp-action="Index">All Products</a></li>
                            <li><a class="nav-link" asp-controller="Product" asp-action="Create">Add Product</a></li>
                            <li><a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            <li><a class="nav-link" asp-controller="Stock" asp-action="Index">Stock Management</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Purchase -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#productsMenu" role="button" aria-expanded="false">
                        <span>📦 Purchase</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="productsMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Products" asp-action="Index">New Purchase</a></li>
                            <li><a class="nav-link" asp-controller="Product" asp-action="Create">Purchase History</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Customers -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#customersMenu" role="button" aria-expanded="false">
                        <span>👤 Customers</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="customersMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Customer" asp-action="Index">All Customers</a></li>
                            <li><a class="nav-link" asp-controller="Customer" asp-action="Create">Add Customer</a></li>
                            <li><a class="nav-link" asp-controller="Customer" asp-action="Loyalty">Loyalty Program</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Supplier -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#supplierMenu" role="button" aria-expanded="false">
                        <span><i class="fa fa-truck me-1"></i> Supplier</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="supplierMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Supplier" asp-action="Index">All Suppliers</a></li>
                            <li><a class="nav-link" asp-controller="Supplier" asp-action="Create">Add Supplier</a></li>
                            <li><a class="nav-link" asp-controller="Supplier" asp-action="Reports">Supplier Reports</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Sales -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#salesMenu" role="button" aria-expanded="false">
                        <span>💰 Sales</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="salesMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Sales" asp-action="Index">All Sales</a></li>
                            <li><a class="nav-link" asp-controller="Sales" asp-action="Create">New Sale</a></li>
                            <li><a class="nav-link" asp-controller="Invoice" asp-action="Index">Invoices</a></li>
                            <li><a class="nav-link" asp-controller="Payment" asp-action="Index">Payments</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Reports -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#reportsMenu" role="button" aria-expanded="false">
                        <span>📊 Reports</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="reportsMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Reports" asp-action="SalesReport">Sales Report</a></li>
                            <li><a class="nav-link" asp-controller="Reports" asp-action="StockReport">Stock Report</a></li>
                            <li><a class="nav-link" asp-controller="Reports" asp-action="CustomerReport">Customer Report</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Settings -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#settingsMenu" role="button" aria-expanded="false">
                        <span>⚙ Settings</span> <i class="fa fa-chevron-down"></i>
                    </a>
                    <div class="collapse submenu" id="settingsMenu">
                        <ul class="nav flex-column">
                            <li><a class="nav-link" asp-controller="Settings" asp-action="Index">General Settings</a></li>
                            <li><a class="nav-link" asp-controller="Settings" asp-action="Users">User Management</a></li>
                            <li><a class="nav-link" asp-controller="Settings" asp-action="Roles">Role Management</a></li>
                        </ul>
                    </div>
                </li>

            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <main role="main" class="p-4">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="border-top footer text-muted text-center py-3">
                &copy; 2025 - Retail_POS
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
